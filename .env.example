# Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Database (find in Supabase: Settings > Database > Connection string > URI)
DATABASE_URL=postgresql://postgres.[PROJECT-ID]:[PASSWORD]@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# App
APP_ENV=development
APP_SECRET_KEY=your-secret-key-for-sessions
HOST=127.0.0.1
PORT=8000
CORS_ORIGINS=http://localhost:8000

# Spotify (get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=client-id
SPOTIFY_CLIENT_SECRET=secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/spotify/callback

# GetSongBPM (fallback for audio features - get from https://getsongbpm.com/api)
GETSONGBPM_API_KEY=your-getsongbpm-api-key

# Rate limiting for AI generation (prevents abuse)
# Users can generate up to RATE_LIMIT_REQUESTS plans per RATE_LIMIT_WINDOW_HOURS
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_HOURS=24